@model UserViewModel

@*<div class="card-title text-center">
    <h4>Id пользователя: @Model.Id</h4>
</div>*@
<div class="card-body">
    <div class="row">
        <div class="col-sm-7 pr-0">
            <div class="form-group row">
                <label for="EMail" class="col-sm-4 col-form-label font-weight-bold">EMail</label>
                <div class="col-sm-8" id="EMail">
                    @Model.EMail
                </div>
            </div>
            <div class="form-group row">
                <label for="Phone" class="col-sm-4 col-form-label font-weight-bold">Телефон</label>
                @if (Model.Phone == null)
                {
                    <div class="col-sm-8" id="Phone">
                        Не указан
                    </div>
                }
                @if (Model.Phone != null)
                {
                    <div class="col-sm-8" id="Phone">
                        @Model.Phone
                    </div>
                }
            </div>
            <div class="form-group row">
                <label for="Role" class="col-sm-4 col-form-label font-weight-bold">Роль</label>
                <div class="col-sm-8" id="Role">
                    @Model.Role
                </div>
            </div>
            <div class="form-group row">
                <label for="IsActive" class="col-sm-4 col-form-label font-weight-bold">Статус</label>
                <div class="col-sm-8" id="IsActive">
                    @if (Model.IsActive)
                    {
                        <div id=@Model.Id class="BlockStatus">Активный</div>
                    }
                    else
                    {
                        <div id=@Model.Id class="BlockStatus">Заблокирован</div>
                    }
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                @if(User.Identity.Name == Model.EMail)
                {
                    <div class="col-6 border text-center bg-warning rounded-pill">Это Вы!</div>
                }
            </div>
        </div>
        <div class="col-sm-5 pl-2">
            <img src="@Model.ImagePath" style="width:12rem;height:12rem;" />
        </div>
    </div>
</div>

@if(Model.Role == "user") { 
<div class="card-footer cardShow">
    <div class="form-inline">
        <div>
            <input id=@Model.Id class="DeleteUserButton btn btn-danger mb-1" type="button" value="Удалить" />
            <div name="RemoveLoader" style="display:none" id=@Model.Id class="spinner-border ml-5" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <div><input id="@Model.Id" class="ChangeUserButton btn btn-warning mb-1" type="button" value="Изменить данные"></div>
        <div>
            <input id="@Model.Id" class="BlockUserButton btn btn-warning mb-1" type="button" value="Изменить статус">
        </div>
    </div>
</div>
}