@model UserViewModel

<div class="form-group row">
    <label for="Id" class="col-sm-2 col-form-label">Id</label>
    <div class="col-sm-10" id="Id">
        @Model.Id
        <input type="text" name="userViewModel.Id" value=@Model.Id hidden />
    </div>
</div>

<div class="form-group row">
    <label for="EMail" class="col-sm-2 col-form-label">EMail</label>
    <div class="col-sm-10" id="EMail">
        @Model.EMail
        <input class="form-control" type="text" id="adminChangeUserMail" placeholder="Mail" name="userViewModel.EMail" value=@Model.EMail hidden />
    </div>
</div>
<div class="form-group row">
    <label for="Name" class="col-sm-2 col-form-label">Имя</label>
    <div class="col-sm-10" id="Name">
        <input class="form-control" type="text" id="adminChangeUserName" placeholder="Name" name="userViewModel.Name" value=@Model.Name  aria-describedby="usernameError"/>
        <span id="usernameError" class="field-validation-error"></span>
    </div>
</div>
<div class="form-group row">
    <label for="Surname" class="col-sm-2 col-form-label">Фамилия</label>
    <div class="col-sm-10" id="Surname">
        <input class="form-control" type="text" id="adminChangeUserSurname" placeholder="Surname" name="userViewModel.Surname" value=@Model.Surname aria-describedby="usersurnameError"/>
        <span id="usersurnameError" class="field-validation-error"></span>
    </div>
</div>
<div class="form-group row">
    <label for="Phone" class="col-sm-2 col-form-label">Телефон</label>
    <div class="col-sm-10" id="Phone">
        <input class="form-control" type="text" id="adminChangeUserPhone" placeholder="Phone" name="userViewModel.Phone" value=@Model.Phone aria-describedby="userphoneError"/>
        <span id="userphoneError" class="field-validation-error"></span>
    </div>
</div>

<div class="form-group row">
    <label for="selectRole" class="col-sm-2 col-form-label">Роль</label>
    <div class="col-sm-10" id="selectRole">
        <select name="userViewModel.Role" class="form-control">
            @foreach (var item in Model.RoleList)
            {
                @if (Model.Role == item.RoleName)
                {
                    <option value=@item.RoleId selected>@item.RoleName</option>
                }
                else
                {
                    <option value=@item.RoleId>@item.RoleName</option>
                }
            }
        </select>
    </div>
</div>

<div class="form-group row">
    <label for="userStatus" class="col-sm-2 col-form-label">Статус</label>
    <div class="col-sm-10" id="userStatus">
        @if (Model.IsActive == true)
        {
            <span>Активный</span>
        }
        else
        {
            <span>Заблокирован</span>
        }
    </div>
</div>

<input type="text" id="" name="userViewModel.ImagePath" value="@Model.ImagePath" hidden />

<div class="form-group row">
    <input class="ml-5 btn btn-success" id=@Model.Id name="UpdateUserButtonAction" type="button" value="Подтвердить">
    <div class="spinner-box ml-4" name="RemoveLoader" style="display:none" id=@Model.Id role="status">
        <div class="pulse-container">
            <div class="pulse-bubble pulse-bubble-1"></div>
            <div class="pulse-bubble pulse-bubble-2"></div>
            <div class="pulse-bubble pulse-bubble-3"></div>
        </div>
    </div>
</div>