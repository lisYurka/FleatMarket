<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FleatMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">FleatMarket</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" 
                        data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!--дропдаун с действями для пользователей с разными ролями-->
                            <li class="nav-item">
                                <div class="dropdown">
                                    <button class="btn dropdown-toggle" type="button"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                            id="dropDownUserMenu">
                                        @User.Identity.Name
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropDownUserMenu">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <form method="get" asp-controller="Administration" asp-action="AllUsers">
                                                <input type="submit" value="Управление пользователями" class="btn dropdown-item" />
                                            </form>
                                        }
                                        <form method="get" asp-controller="User" asp-action="UserArea">
                                            <input type="submit" id="userProfile" value="Мой кабинет" class="btn dropdown-item" onclick="userProfileBtn()" />
                                        </form>

                                        <form method="post" asp-controller="Account" asp-action="Logoff">
                                            <input type="submit" value="Выйти" class="btn dropdown-item" />
                                        </form>
                                    </div>
                                </div>
                            </li>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-controller="Account" asp-action="Login">Войти</a>
                            </li>
                        }
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="btn btn-info" id="openCreateDeclarationBtn" 
                                   asp-controller="Declaration" asp-action="Create">Подать объявление</a>
                            }
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a class="btn btn-info" asp-controller="Account" asp-action="Login">Подать объявление</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - FleatMarket
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
